<Window x:Class="ExecuteSqlREquest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExecuteSqlREquest"
        mc:Ignorable="d"
        Title="PostgreSQL Query Executor" Height="450" Width="800"
        Closing="Window_Closing" 
        SourceInitialized="Window_SourceInitialized">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" MinHeight="330" />
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Zone de saisie -->
    <TextBox x:Name="QueryTextBox" AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Margin="0,2,0,11"/>

    <!-- Bouton et ProgressBar -->
    <Grid Grid.Row="1" Margin="0,5,0,0">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Button Name="ExecuteButton" Content="Exécuter la requête" Height="40" Click="ExecuteQuery_Click" HorizontalAlignment="Stretch"/>
      <ProgressBar x:Name="QueryProgressBar" Grid.Row="1" Height="5" Margin="0,5,0,0" Visibility="Collapsed" />
    </Grid>

    <!-- Affichage des résultats -->
    <DataGrid x:Name="ResultDataGrid" Grid.Row="2" Margin="0,10,0,0" 
              VerticalAlignment="Stretch" 
              HorizontalAlignment="Stretch"
              MinHeight="200"/>
  </Grid>
</Window>
